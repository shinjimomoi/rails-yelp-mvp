<div class="container mt-5 mb-5">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-md-8 ">
      <div class="card-trip">
        <%= image_tag "https://loremflickr.com/320/240/#{@restaurant.name}" %>
        <div class="card-trip-infos">
          <div d-flex>
            <h1><%= @restaurant.name %></h1>
            <div class="d-flex">
              <p class="me-5">Adress: <%= @restaurant.address %></p>
              <p class="me-5">Phone number: <%= @restaurant.phone_number %></p>
              <p class="me-5">Category: <%= @restaurant.category %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <h3>Reviews</h3>

          <% @restaurant.reviews.each do |review| %>
            <div class="card p-3 mt-3">
              <div class="d-flex justify-content-between">
                <div>
                  <%= review.content %>
                </div>
                <div class="d-flex">
                  <% review.rating.times do %>
                      <i class="fas fa-star golden-star"></i>
                    <% end %>
                    <% (5 - review.rating).times do %>
                      <i class="far fa-star golden-star"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

      </div>
      <div class="d-flex justify-content-between">
        <div><%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %></div>
        <div>
          <%= link_to restaurants_path do %>
            <i class="fas fa-backward"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
