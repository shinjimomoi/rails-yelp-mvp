<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-lg-10">
      <h1>Create a new restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name, input_html: { placeholder: 'Restaurant name' } %>
        <%= f.input :address, input_html: { placeholder: 'Street 123' } %>
        <%= f.input :phone_number, input_html: { placeholder: '+00 0000000' }%>
        <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
        <%= f.submit class: 'btn btn-primary mt-2' %>
      <% end %>
    </div>
  </div>
</div>
